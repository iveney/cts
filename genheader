#!/bin/bash
# This is a wrapper for the unix tool `cproto'
# Example use:
# ./genheader <src1.c> <src2.c> ...
# then src1.h , src2.h ... is generated,which includes the prototypes 
# in src1.c ,src2.c, ...
# ``#ifndef ... #endif'' will be added in the head and tail of the header file

for i in $@
do
	name="${i%\.c}"
	filename="$name".h
	DEF=`echo $name | tr [[:lower:]] [[:upper:]] `
	HEADER="__${DEF}_H__"
	#echo "i=$i name=$name filename=$filename DEF=$DEF HEADER=$HEADER"
	echo "" > $filename
	echo "#ifndef $HEADER" > "$filename".temp
	echo "#define $HEADER" >> "$filename".temp
	cproto -v $i >> "$filename".temp
	echo "#endif " >> "$filename".temp
	mv "$filename".temp $filename
done
